}
.regist_btn{
  background-color: gray;
  color: white;
  margin-bottom: 5px;
  margin-top: 10px;
}
.my_head_back{
  width: 100%;
  height: 80px;
  background:-webkit-gradient(linear, 0% 0%, 0% 100%,from(red), to(orange)); 
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}
.top-view{
  background-color: white;
  width: 100%;
